script/source = "extends VBoxContainer


const ENTRY_SCENE := preload(\"res://scenes/ui/leaderboard/entry.tscn\")

var leaderboard_entries := [{}, {}, {}]

onready var easy: Control = $MaxSize/TabContainer/Easy
onready var normal: Control = $MaxSize/TabContainer/Normal
onready var expert: Control = $MaxSize/TabContainer/Expert


func _enter_tree():
	MangleApi.sync_leaderboard = true
	# warning-ignore:return_value_discarded
	MangleApi.connect(\"new_leaderboard_entry\", self, \"_on_new_entry\")


func _exit_tree():
	MangleApi.sync_leaderboard = false


class Entry extends Reference:
	var level: int
	var entry: Control


func _on_new_entry(entry: MangleApi.LeaderboardEntryData):
	var scene := ENTRY_SCENE.instance()
	scene.initialize(entry.username, entry.levels)
	
	var difficulty_set: Dictionary = leaderboard_entries[entry.difficulty - 1]
	
	if entry.username in difficulty_set:
		difficulty_set[entry.username].entry.queue_free()
	
	var obj := Entry.new()
	obj.level = entry.levels
	obj.entry = scene
	
	var values: Array = difficulty_set.values()
	var parent: Control = [easy, normal, expert][entry.difficulty - 1]
	
	for pair in values:
		parent.remove_child(pair.entry)
	
	difficulty_set[entry.username] = obj
	values.append(obj)
	values.sort_custom(self, \"_sort\")
	
	var i := 0
	for pair in values:
		pair.entry.set_rank(i + 1)
		i += 1
		parent.add_child(pair.entry)


static func _sort(a: Entry, b: Entry) -> bool:
	return b.level < a.level
"

