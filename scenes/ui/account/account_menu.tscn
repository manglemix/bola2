script/source = "extends VBoxContainer


onready var login: Button = $Login/Button


func _ready():
	$Account.hide()
	$Login.hide()
	$Connecting.hide()
	
	if not MangleApi.connected:
		$Connecting.show()
		yield(MangleApi, \"connected\")
		$Connecting.hide()
	
	if MangleApi.is_logged_in:
		_on_logged_in()
		$Account.show()
		return
	
	$Login.show()


func _on_login():
	$Login/LoginStatus.text = \"\"
	var res = MangleApi.login()
	if res == null:
		$Login/LoginStatus.text = \"Failed to connect to server. Please try again later\"
		return
	yield(res, \"completed\")
	_on_logged_in()


func _on_logged_in():
	if not MangleApi.is_logged_in:
		return
	
	$Login.hide()
	$Label.hide()
	$Account.visible = true
	$Account/Username.text = MangleApi.account_data.username
	$Account/Easy.text += str(MangleApi.account_data.easy_highscore)
	$Account/Normal.text += str(MangleApi.account_data.normal_highscore)
	$Account/Expert.text += str(MangleApi.account_data.expert_highscore)
	$Account/Tournament.text += str(MangleApi.account_data.tournament_wins.size())


func _on_logout_pressed():
	var res = MangleApi.logout()
	if res == null:
		return
	yield(res, \"completed\")
	$Account.hide()
	$Login.show()
	$Label.show()


func _on_back_pressed():
	if MangleApi.logging_in:
		MangleApi.cancel_login()
"

